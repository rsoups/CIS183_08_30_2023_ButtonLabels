<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_v_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147dp"
        android:text="DUMMY_VAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_textSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="103dp"
        android:layout_marginBottom="101dp"
        android:text="12"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_decrease"
        app:layout_constraintStart_toStartOf="@+id/tv_v_greeting"
        app:layout_constraintTop_toTopOf="@+id/tv_v_greeting" />

    <Button
        android:id="@+id/btn_v_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="Increase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_decrease"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_v_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="Decrease"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_v_increase"
        app:layout_constraintEnd_toStartOf="@+id/btn_v_increase"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>